{
	"name": "EmbeddingConversion",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SpecificRAWEmbedding",
						"type": "DatasetReference"
					},
					"name": "RawEmbedding"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "EmbeddingBlob",
						"type": "LinkedServiceReference"
					},
					"name": "ProcessedEmbeddings"
				}
			],
			"transformations": [
				{
					"name": "DeriveVectors"
				},
				{
					"name": "RemoveColumns"
				},
				{
					"name": "AggregateIntoSingleRow"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          corpusid as string,",
				"          model as string,",
				"          updated as string,",
				"          vector as float[]",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> RawEmbedding",
				"RawEmbedding derive(vectors = @(id=corpusid,",
				"          values=vector)) ~> DeriveVectors",
				"DeriveVectors select(mapColumn(",
				"          vectors",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RemoveColumns",
				"RemoveColumns aggregate(groupBy(vectors),",
				"     vector = collect(@(id=vectors.id, values=vectors.values))) ~> AggregateIntoSingleRow",
				"AggregateIntoSingleRow select(mapColumn(",
				"          vector",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'json',",
				"     container: 'processed-embeddings',",
				"     filePattern:'embeddings[n].json',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('roundRobin', 4)) ~> ProcessedEmbeddings"
			]
		}
	}
}