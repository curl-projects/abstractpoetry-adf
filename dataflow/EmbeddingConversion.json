{
	"name": "EmbeddingConversion",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SpecificRAWEmbedding",
						"type": "DatasetReference"
					},
					"name": "RawEmbedding"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "EmbeddingBlob",
						"type": "LinkedServiceReference"
					},
					"name": "ProcessedEmbeddings"
				}
			],
			"transformations": [
				{
					"name": "SelectIDAndModel"
				},
				{
					"name": "AddVectorColumn"
				},
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          corpusid as integer,",
				"          model as string,",
				"          vector as string,",
				"          updated as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> RawEmbedding",
				"RawEmbedding select(mapColumn(",
				"          id = corpusid,",
				"          values = vector",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectIDAndModel",
				"SelectIDAndModel derive(vectors = \"vectors\") ~> AddVectorColumn",
				"AddVectorColumn aggregate(groupBy(vectors),",
				"     new_vector = collect(@(id=id, values=values))) ~> aggregate1",
				"aggregate1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'json',",
				"     container: 'processed-embeddings',",
				"     filePattern:'embeddings[n].json',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('roundRobin', 2)) ~> ProcessedEmbeddings"
			]
		}
	}
}